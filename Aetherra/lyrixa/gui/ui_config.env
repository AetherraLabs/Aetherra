# Lyrixa UI Configuration
# ========================
#
# Set LYRIXA_UI_MODE to control which interface is used:
# - classic: Original PySide6 interface (default)
# - hybrid: Modern hybrid interface with WebView panels
#
# Example usage:
# 1. For hybrid UI: set LYRIXA_UI_MODE=hybrid
# 2. For classic UI: set LYRIXA_UI_MODE=classic (or leave unset)

# UI Mode Selection
LYRIXA_UI_MODE=classic

# Hybrid UI Configuration (only used when LYRIXA_UI_MODE=hybrid)
HYBRID_ENABLE_WEB_PANELS=true
HYBRID_API_PORT=8007
HYBRID_CHAT_API_PORT=8080

# Performance Settings
ENABLE_BACKGROUND_MONITORING=true
UPDATE_INTERVAL_MS=1000
